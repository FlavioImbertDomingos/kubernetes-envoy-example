{
    "admin": {
        "access_log_path": "/dev/null",
        "address": {
            "socket_address": {
                "address": "0.0.0.0",
                "port_value": 8001,
                "protocol": "TCP"
            }
        }
    },
    "stats_flush_interval": {
        "seconds": 5
    },
    "stats_sinks": [
        {
            "name": "envoy.statsd",
            "config": {
                "address": {
                    "socket_address": {
                        "address": "127.0.0.1",
                        "port_value": 9125,
                        "protocol": "UDP"
                    }
                }
            }
        }
    ],
    "tracing": {
        "http": {
            "name": "envoy.zipkin",
            "config": {
                "collector_cluster": "zipkin",
                "collector_endpoint": "/api/v1/spans"
            }
        }
    },
    "static_resources": {
        "listeners": [
            {
                "name": "app",
                "address": {
                    "socket_address": {
                        "address": "0.0.0.0",
                        "port_value": 8080,
                        "protocol": "TCP"
                    }
                },
                "filter_chains": [
                    {
                        "filter_chain_match": {
                            "sni_domains": [
                                "*"
                            ]
                        },
                        "tls_context": {
                            "common_tls_context": {
                                "tls_certificates": [
                                    {
                                        "certificate_chain": {
                                            "filename": "/certs/cert.pem"
                                        },
                                        "private_key": {
                                            "filename": "/certs/key.pem"
                                        }
                                    }
                                ],
                                "validation_context": {
                                    "trusted_ca": {
                                        "filename": "/certs/ca.pem"
                                    }
                                },
                                "alpn_protocols": "h2,http/1.1"
                            },
                            "require_client_certificate": true
                        },
                        "filters": [
                            {
                                "name": "envoy.http_connection_manager",
                                "config": {
                                    "codec_type": "AUTO",
                                    "stat_prefix": "ingress",
                                    "route_config": {
                                        "name": "ingress",
                                        "virtual_hosts": [
                                            {
                                                "name": "ingress",
                                                "domains": [
                                                    "*"
                                                ],
                                                "require_tls": "ALL"
                                            }
                                        ]
                                    },
                                    "http_filters": [
                                        {
                                            "name": "envoy.router",
                                            "config": {}
                                        }
                                    ],
                                    "tracing": {
                                        "operation_name": "INGRESS"
                                    },
                                    "server_name": "envoy ingress",
                                    "idle_timeout": {
                                        "seconds": 10
                                    },
                                    "drain_timeout": {
                                        "seconds": 10
                                    },
                                    "access_log": {
                                        "name": "envoy.file_access_log",
                                        "config": {
                                            "path": "/dev/stdout"
                                        }
                                    },
                                    "generate_request_id": true
                                }
                            }
                        ]
                    }
                ]
            }
        ],
        "clusters": [
            {
                "name": "frontend",
                "type": "STRICT_DNS",
                "connect_timeout": {
                    "nanos": 250000000
                },
                "lb_policy": "ROUND_ROBIN",
                "hosts": [
                    {
                        "socket_address": {
                            "address": "frontend",
                            "port_value": 8080,
                            "protocol": "TCP"
                        }
                    }
                ],
                "health_checks": [
                    {
                        "timeout": {
                            "nanos": 100000000
                        },
                        "interval": {
                            "seconds": 3
                        },
                        "interval_jitter": {
                            "nanos": 500000000
                        },
                        "unhealthy_threshold": 3,
                        "healthy_threshold": 2,
                        "http_health_check": {
                            "path": "/healthz",
                            "service_name": "frontend"
                        }
                    }
                ],
                "tls_context": {
                    "common_tls_context": {
                        "tls_certificates": [
                            {
                                "certificate_chain": {
                                    "filename": "/certs/cert.pem"
                                },
                                "private_key": {
                                    "filename": "/certs/key.pem"
                                }
                            }
                        ],
                        "validation_context": {
                            "trusted_ca": {
                                "filename": "/certs/ca.pem"
                            }
                        }
                    },
                    "sni": "frontend"
                },
                "http2_protocol_options": {}
            },
            {
                "name": "zipkin",
                "type": "STRICT_DNS",
                "connect_timeout": {
                    "nanos": 250000000
                },
                "lb_policy": "ROUND_ROBIN",
                "hosts": [
                    {
                        "socket_address": {
                            "address": "zipkin",
                            "port_value": 9411,
                            "protocol": "TCP"
                        }
                    }
                ],
                "http_protocol_options": {}
            }
        ]
    }
}