{
    "listeners": [
        {
            "name": "ingress",
            "address": "tcp://0.0.0.0:8080",
            "ssl_context": {
                "cert_chain_file": "/certs/cert.pem",
                "private_key_file": "/certs/key.pem",
                "ca_cert_file": "/certs/ca.pem",
                "require_client_certificate": true,
                "verify_subject_alt_name": [
                    "order"
                ]
            },
            "filters": [
                {
                    "type": "read",
                    "name": "http_connection_manager",
                    "config": {
                        "server_name": "envoy-item",
                        "tracing": {
                            "operation_name": "ingress"
                        },
                        "codec_type": "auto",
                        "stat_prefix": "ingress",
                        "route_config": {
                            "virtual_hosts": [
                                {
                                    "name": "backend",
                                    "domains": [
                                        "*"
                                    ],
                                    "routes": [
                                        {
                                            "prefix": "/",
                                            "cluster": "local_service"
                                        }
                                    ]
                                }
                            ]
                        },
                        "filters": [
                            {
                                "type": "both",
                                "name": "health_check",
                                "config": {
                                    "pass_through_mode": true,
                                    "endpoint": "/healthz.php",
                                    "cache_time_ms": 1000
                                }
                            },
                            {
                                "type": "decoder",
                                "name": "router",
                                "config": {}
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "aux",
            "address": "tcp://0.0.0.0:6060",
            "filters": [
                {
                    "type": "read",
                    "name": "http_connection_manager",
                    "config": {
                        "codec_type": "auto",
                        "stat_prefix": "aux",
                        "route_config": {
                            "virtual_hosts": [
                                {
                                    "name": "backend",
                                    "domains": [
                                        "*"
                                    ],
                                    "routes": [
                                        {
                                            "prefix": "/healthz",
                                            "cluster": "local_aux_service"
                                        },
                                        {
                                            "prefix": "/metrics",
                                            "cluster": "local_aux_service"
                                        }
                                    ]
                                }
                            ]
                        },
                        "filters": [
                            {
                                "type": "both",
                                "name": "health_check",
                                "config": {
                                    "pass_through_mode": true,
                                    "endpoint": "/healthz",
                                    "cache_time_ms": 1000
                                }
                            },
                            {
                                "type": "decoder",
                                "name": "router",
                                "config": {}
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "tracing": {
        "http": {
            "driver": {
                "type": "zipkin",
                "config": {
                    "collector_cluster": "zipkin",
                    "collector_endpoint": "/api/v1/spans"
                }
            }
        }
    },
    "admin": {
        "access_log_path": "/dev/null",
        "address": "tcp://0.0.0.0:8001"
    },
    "cluster_manager": {
        "clusters": [
            {
                "name": "local_service",
                "connect_timeout_ms": 250,
                "type": "static",
                "lb_type": "round_robin",
                "features": "http2",
                "hosts": [
                    {
                        "url": "tcp://127.0.0.1:9090"
                    }
                ]
            },
            {
                "name": "local_aux_service",
                "connect_timeout_ms": 250,
                "type": "static",
                "lb_type": "round_robin",
                "hosts": [
                    {
                        "url": "tcp://127.0.0.1:5050"
                    }
                ]
            },
            {
                "name": "zipkin",
                "connect_timeout_ms": 250,
                "type": "strict_dns",
                "lb_type": "round_robin",
                "hosts": [
                    {
                        "url": "tcp://zipkin:9411"
                    }
                ]
            }
        ]
    },
    "statsd_udp_ip_address": "127.0.0.1:9125",
    "stats_flush_interval_ms": 1000
}